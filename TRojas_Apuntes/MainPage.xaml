<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TRojas_Apuntes.MainPage"
             Title="Inicio">

    <VerticalStackLayout Spacing="25" Padding="30,60,30,30"
                         VerticalOptions="Center">

        <Label 
            Text="¡Bienvenida, Thais Dixiana Rojas Torres!"
            SemanticProperties.HeadingLevel="Level1"
            FontSize="32"
            HorizontalOptions="Center" />

        <Label 
            x:Name="CounterLabel"
            Text="Haz clic en el botón"
            SemanticProperties.HeadingLevel="Level2"
            FontSize="18"
            HorizontalOptions="Center" />

        <Button 
            Text="Haz clic"
            SemanticProperties.Hint="Cuenta cuántas veces haces clic"
            Clicked="OnCounterClicked"
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>

